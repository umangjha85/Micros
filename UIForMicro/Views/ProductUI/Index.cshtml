@model IEnumerable<UIForMicro.Models.ProductUI>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrEdit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>CategoryId</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.Id">Edit</a>
                    <a  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
      

    </tbody>

</table>

